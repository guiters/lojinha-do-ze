{
  "drive": "DriveMysql",
  "database": "lojinhadoze",
  "connections": "local",
  "table": "product",
  "columns": [
    "id",
    "name",
    "description",
    "image",
    "price",
    "category",
    "features"
  ],
  "limitpage": "100",
  "where": {
    "optional": {
      "id": "/^[a-zA-Z0-9]+$/",
      "name": "/^[.*]+$/",
      "description": "/^[a-zA-Z0-9]+$/",
      "price": "/^[a-zA-Z0-9]+$/",
      "category": "/^[a-zA-Z0-9]+$/",
      "features": "/^[a-zA-Z0-9]+$/"
    },
    "require":{}
  },
  "requires": {
    "REQUEST": [
      "GET",
      "POST",
      "PUT",
      "DELETE"
    ]
  }
}